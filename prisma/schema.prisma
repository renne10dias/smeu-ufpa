generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  @@map("users")
  id             String    @id @default(uuid())
  name           String
  surname        String
  email          String
  password_hash  String
  created_at     DateTime
  user_types_id  String
  products Product[] // Relacionamento com produtos
}

model Product {
  @@map("products")
  id       String  @id @default(uuid())
  name     String
  price    Float
  quantity Int
  userId   String
  user     User    @relation(fields: [userId], references: [id])
}

